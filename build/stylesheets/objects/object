/*=====================================================================
  写真の枠とその効果
=====================================================================*/
/* frame  クラスに対する指定を行う */
.frame {
  border: solid 8px #fef4f4;
  /* 桜色の枠線を付けます */
  box-shadow: 0 0 0 1px #ccc, 1px 3px 8px 0 #25252555;
  margin-bottom: 0.5em;
  /* 下に少し間隔を取ります */ }

/* 写真をセピア色にする */
.sepia.frame {
  filter: sepia(90%); }

/* 写真を白黒にする */
.monochrome.frame {
  filter: grayscale(90%); }

/* 写真をぼかす */
.blur.frame {
  filter: blur(3px); }

/* 写真の色を反転させる */
.invert.frame {
  filter: invert(75%); }

/* 写真を少し透明にする */
.opacity.frame {
  filter: opacity(67%); }

/* 写真を右下に少し回転する */
.rotate3 {
  transform: rotate(3deg); }

/* 写真を右上に少し回転する */
.rotate-3 {
  transform: rotate(-3deg); }

